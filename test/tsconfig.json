{
    "extends": "../tsconfig.json",
    "include": ["**/*", "../src/**/*"],
    "compilerOptions": {
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": false,
        "types": ["vitest/globals"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
